{
  "manifest_version": 3,
  "name": "leetviz",
  "description": "Visualise LeetCode progress and work on weak spots.",
  "version": "0.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://leetcode.com/*"
      ]
    }
  ],
  "action": {
    "default_icon": {              
        "16": "images/icon-16.png",   
        "48": "images/icon-48.png",   
        "32": "images/icon-32.png",
        "128": "images/icon-128.png"
    },
    "default_title": "Click Me", 
    "default_popup": "sidepanel.html"
  },
  "host_permissions": [
    "https://*.leetcode.com/*"
  ]
}